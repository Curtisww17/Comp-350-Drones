<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<?import javafx.geometry.Insets?>
<BorderPane prefHeight="830.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.controllers.Results">
    <top>
        <HBox id="navBar" fx:id="navBar" spacing="10">
            <Button id="home" fx:id="home" text="Home" onAction="#handleNavigateHome"/>
            <Button id="settings" fx:id="settings" text="Settings" onAction="#HandleNavigateSettings"/>
            <Button id="results" fx:id="results" text="Results" onAction="#handleNavigateResults"/>
        </HBox>
    </top>
    <center>
        <VBox id="vBox" fx:id="vBox" prefHeight="200.0" prefWidth="730.0">
            <children>
                <Label id="resultsTitle" fx:id="resultsTitle" text="Simulation Results"/>
                <GridPane hgap="90" vgap="80">
                    <padding><Insets top="50" right="115" bottom="25" left="115"/></padding>
                    <Text id="algorithmText" text="Algorithm"
                        GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                    <Text id="averageText" text="Average Time"
                          GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                    <Text id="worstText" text="Worst Time"
                          GridPane.columnIndex="2" GridPane.rowIndex="0"/>
                    <Text id="totalTime" text="Total Time"
                          GridPane.columnIndex="3" GridPane.rowIndex="0"/>

                    <Text id="knapsack" text="Knapsack"
                          GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                    <Text id="fifo" text="FIFO"
                          GridPane.columnIndex="0" GridPane.rowIndex="1"/>

                </GridPane>
            </children>
        </VBox>
    </center>
    <bottom>
        <AnchorPane>
            <Button id="exportButton" fx:id="exportButton" contentDisplay="CENTER" layoutX="1304" layoutY="-120" text="Export Results" textFill="ffffff" onAction="#handleExport" />
        </AnchorPane>
    </bottom>
</BorderPane>
