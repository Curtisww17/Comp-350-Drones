<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="830.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.controllers.SplashScreen">
    <top>
        <MenuBar id="navBar" BorderPane.alignment="CENTER">
            <menus>
                <Menu mnemonicParsing="false" text="Home">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Close" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Settings" />
                <Menu mnemonicParsing="false" text="Result" />
            </menus>
        </MenuBar>
    </top>
   <center>
      <HBox id="hBox" prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <ImageView id="splashImage" fx:id="SplashImage" fitHeight="660.0" fitWidth="660.0" pickOnBounds="true" preserveRatio="true" />

            <VBox id="vBox" prefHeight="200.0" prefWidth="730.0">
               <children>
                  <Label id="splashTitle" text="Delivery Simulation" />
                  <TextFlow id="splashText" prefHeight="200.0" prefWidth="200.0">
                      <Text id="splashTextText" fill="#808080" text="This simulation compares delivery times of knapsack vs fifo delivery systems. Click next to continue to the simulation settings." />
                  </TextFlow>

               </children></VBox>
         </children>
      </HBox>
   </center>
    <bottom>
        <AnchorPane>
            <Button id="nextButton" fx:id="simButton" textFill="ffffff" contentDisplay="CENTER" text="Next" layoutX="1304" layoutY="-120"/>
        </AnchorPane>
    </bottom>
</BorderPane>
